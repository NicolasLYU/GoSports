  <path id="pub.module.sourcepath">
    <dirset dir="${module.pub.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.pub" depends="compile.module.pub.production,compile.module.pub.tests" description="Compile module pub"/>
  
  <target name="compile.module.pub.production" depends="register.custom.compilers" description="Compile module pub; production classes">
    <mkdir dir="${pub.output.dir}"/>
    <javac2 destdir="${pub.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.pub}/javac">
      <compilerarg line="${compiler.args.pub}"/>
      <bootclasspath refid="pub.module.bootclasspath"/>
      <classpath refid="pub.module.production.classpath"/>
      <src refid="pub.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.pub"/>
    </javac2>
    
    <copy todir="${pub.output.dir}">
      <fileset dir="${module.pub.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.pub.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.pub.tests" depends="register.custom.compilers,compile.module.pub.production" description="compile module pub; test classes" unless="skip.tests"/>
  
  <target name="clean.module.pub" description="cleanup module">
    <delete dir="${pub.output.dir}"/>
    <delete dir="${pub.testoutput.dir}"/>
